#!/bin/csh
#
limit datasize 11.0M
limit coredumpsize 0M
unset noclobber
umask 1
set i = 0
#cd /usr/students/pbeach/bin
cd ~sstock/src/MudOS/bin
while (1)
    echo -n "Restart $i. " > ~sstock/src/mos/lib/log/debug
    date >> ~sstock/src/mod/lib/log/debug
nice +1 driver config.mud >>& /dev/null
    echo "Exit status: " $status >> /dev/null
    @ i++
    if ($i > 50) set i = 0
end
